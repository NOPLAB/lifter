# =============================================================================
# lifter configuration template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# SSH connection settings (required for remote Slurm execution)
# -----------------------------------------------------------------------------
SLURM_SSH_HOST=your-cluster.example.com
SLURM_SSH_USER=your-username
SLURM_SSH_PORT=22
# Authentication method: password or key
SLURM_SSH_AUTH=password
# Required only for key authentication
SLURM_SSH_KEY=

# -----------------------------------------------------------------------------
# Slurm settings (required for remote execution)
# -----------------------------------------------------------------------------
SLURM_REMOTE_WORKDIR=~/workdir
SLURM_PARTITION=gpu
SLURM_GPUS=1
SLURM_GPU_TYPE=
SLURM_TIME=24:00:00
SLURM_MEM=32G
SLURM_CPUS=8
SLURM_JOB_PREFIX=job
# Container image for Pyxis/Enroot (optional)
SLURM_CONTAINER=
# Maximum concurrent jobs
SLURM_MAX_CONCURRENT_JOBS=1

# -----------------------------------------------------------------------------
# W&B settings (required for Sweep)
# -----------------------------------------------------------------------------
WANDB_API_KEY=
WANDB_ENTITY=
WANDB_PROJECT=

# -----------------------------------------------------------------------------
# Local execution settings (for --local option)
# -----------------------------------------------------------------------------
LOCAL_POLL_INTERVAL=10
LOCAL_LOG_POLL_INTERVAL=2
LOCAL_MAX_CONCURRENT_JOBS=1
