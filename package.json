{
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "*.py": [
      "uv run ruff check --fix",
      "uv run ruff format"
    ],
    "*.{yaml,yml,json,md}": [
      "prettier --write"
    ]
  }
}
